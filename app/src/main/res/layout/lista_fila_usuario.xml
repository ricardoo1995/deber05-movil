<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"
    android:orientation="vertical">


    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <TextView
        android:id="@+id/txtv_nombre"
        android:layout_width="295dp"
        android:layout_height="41dp"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView3"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtv_apellido"
        android:layout_width="160dp"
        android:layout_height="31dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtv_nombre" />

    <TextView
        android:id="@+id/txtv_cedula"
        android:layout_width="88dp"
        android:layout_height="41dp"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/txtv_nombre" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="159dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/txtv_apellido"
        android:layout_marginTop="0dp" />

    <Button
        android:id="@+id/botonDetalle"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/txtv_nombre"
        android:text="Button" />

    <Button
        android:id="@+id/botonLike"
        android:layout_width="wrap_content"
        android:layout_height="36dp"
        android:layout_below="@+id/txtv_nombre"
        android:layout_toStartOf="@+id/txtv_cedula"
        android:text="Button" />

</RelativeLayout>